<%- include("partials/_header") %>

<link rel="stylesheet" href="/stylesheets/login.css">

<div style="width: 100%; height: 850px;">
    
    <div class="login-box" style="background-color: rgb(12,20,28);">
      <h2 style="opacity:40%;">Login</h2>
      <form method="post" action="/users/login">
        <div class="user-box">
          <input type="text" name="loginName" autocomplete="off" required>
          <label>Username</label>
        </div>
        <div class="user-box">
          <input type="password" name="passwordName" required>
          <label>Password</label>
        </div>
        <button class="signInButton">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Sign in
        </button>
      </form>
    </div>

</div>

